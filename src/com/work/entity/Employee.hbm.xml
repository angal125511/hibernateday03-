<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package="com.hibernate.entity" -->
<hibernate-mapping package="com.work.entity" > <!-- mapping 是hibernate映射文件  -->
<!--  name=类名   table=表名   -->
<class name="Employee" table="employee"  >
    <!--id 主键  name 属性  column 列名   type 类名  -->
    <id name="id" column="e_id"  >
        <!--  主键生成策略  increment hibernate框架的生成策略
         identity  mysql 底层数据库生成表识符
         native 是mysql数据库  -->
        <generator class="native" />
    </id>

    <property name="name" type="java.lang.String" column="e_name"   />

    <many-to-one name="joinPart"  class="JoinPart" column="j_id" ></many-to-one>
</class>

</hibernate-mapping>
